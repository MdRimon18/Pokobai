@{
    ViewData["Title"] = "Thank You";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main" id="top">
    <div class="container">
        <div class="row min-vh-100 flex-center">
            <div class="col-lg-6 col-md-8">
                <div class="card text-center shadow-lg">
                    <div class="card-body p-5">
                        <img src="/assets/img/icons/check-circle.png" alt="Success" width="100" class="mb-3">
                        <h2 class="text-success fw-bold">Thank You for Your Order!</h2>
                        <p class="text-muted">Your order has been successfully placed.</p>

                        <!-- Order Details Section -->
                        <div class="alert alert-light border mt-4">
                            <h5 class="mb-2">Order Details</h5>
                            <p><strong>Order ID:</strong> <span id="order-id">Loading...</span></p>
                            <p><strong>Payment Status:</strong> <span id="payment-status">Loading...</span></p>
                            <p><strong>Delivery Estimate:</strong> <span id="delivery-estimate">Loading...</span></p>
                        </div>

                        <a href="/" class="btn btn-primary mt-3">
                            <i class="fas fa-home me-2"></i> Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- jQuery AJAX to Load Order Details -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $.ajax({
            url: "/Home/GetOrderDetails",
            type: "GET",
            success: function (data) {
                $("#order-id").text(data.OrderId);
                $("#payment-status").text(data.PaymentStatus);
                $("#delivery-estimate").text(data.EstimatedDelivery);
            },
            error: function () {
                alert("Failed to load order details.");
            }
        });
    });
</script>
